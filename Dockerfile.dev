FROM php:8.4-fpm-alpine

RUN apk add --no-cache libzip-dev zip unzip icu-dev libpng-dev libjpeg-turbo-dev freetype-dev oniguruma-dev linux-headers $PHPIZE_DEPS \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install -j$(nproc) pdo_mysql zip intl mbstring gd opcache

COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

WORKDIR /var/www/html

# Dev: install with dev dependencies
RUN composer install --no-scripts --prefer-dist 2>/dev/null || true

RUN chown -R www-data:www-data /var/www/html \
    && chmod -R 775 /var/www/html/storage /var/www/html/bootstrap/cache

USER www-data
CMD ["php-fpm"]
